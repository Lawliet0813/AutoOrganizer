{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "AutoOrganizer Rules",
  "type": "object",
  "required": ["version", "rules"],
  "additionalProperties": false,
  "properties": {
    "version": {
      "type": "string"
    },
    "rules": {
      "type": "object",
      "minProperties": 1,
      "patternProperties": {
        "^[a-zA-Z0-9_-]+$": {
          "type": "object",
          "required": ["extensions"],
          "additionalProperties": false,
          "properties": {
            "extensions": {
              "type": "array",
              "minItems": 1,
              "items": {
                "type": "string"
              }
            },
            "keywords": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "default": []
            }
          }
        }
      }
    }
  }
}
